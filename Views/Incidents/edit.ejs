<!DOCTYPE html>
<%- include('../Partials/Header.ejs') %>
<%- include('../Partials/Navbar.ejs') %>

<body>
        <main class=""container>
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <h1><%= PageTitle %></h1><br>
                    <form class="form" method="post" >
                          <div class="form-group">
                            <label class="form-label" for="assigned">State: </label>
                            <select id="state" name="state">
                                <option value="assigned">Assigned</option>
                                <option value="not assigned">Not Assigned</option>                               
                              </select>
                              
                          </div>
                          <div class="form-group">
                            <label class="form-label" for="descriptionTextField">Description: </label>
                            <input
                              type="text"
                              class="form-control"
                              id="descriptionTextField"
                              placeholder="Enter details about the incident"
                              value="<%= incident.description %>"
                              name="description"
                              required
                            />
                          </div>
                          <div class="form-group">
                            <label class="form-label" for="priority">Priority: </label>                            
                            <select id="state" name="priority">
                                <option value="high">High</option>
                                <option value="low">Low</option>                                                             
                              </select>
                          </div>

                          <div class="form-group">
                            <label class="form-label" for="categoryTextField">Category: </label>
                            <input
                              type="text"
                              class="form-control"
                              id="categoryTextField"
                              placeholder="Enter the category"
                              value="<%= incident.category %>"
                              name="category"
                              required
                            />
                          </div>


                          <div class="form-group">
                            <label class="form-label" for="assignedToTextField">Assigned To: </label>
                            <input
                              type="text"
                              class="form-control"
                              id="assignedToTextField"
                              placeholder="Assigned To"
                              value="<%= incident.assignedTo %>"
                              name="assignedTo"
                              required
                            />
                          </div>

                          <div class="form-group">
                            <label class="form-label" for="assignedByTextField">Assigned by</label>
                            <input
                              type="text"
                              class="form-control"
                              id="assignedByTextField"
                              placeholder="Assigned By"
                              value="<%= incident.assignedBy %>"
                              name="assignedBy"
                              required
                            />
                          </div>
                          <div class="mt-3">
                            <button class="btn btn-primary btn-sm" type="submit">
                                <i class="fas fa-edit"></i>Submit
                              </button>
                      
                              <span class="ms-3">
                                <a href="/incident-list" class="btn btn-warning btn-sm " role="button">
                                  <i class="fas fa-undo ">Cancel</i></a>
                              </span>
                        </div>
                          </form>
                     
                </div>
            </div>
        </main>
<script src="/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/dist/css/bootstrap.min.js"></script>
<script src="/jquery/dist/jquery.min.js"></script>
</body>

</html>